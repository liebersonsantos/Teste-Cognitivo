<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Linguagem"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/imgBtnEnviarLinguagem"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/proximo" />

    <ImageButton
        android:id="@+id/imgbtnVLinguagem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/imgbtnELinguagem"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/imgBtnEnviarLinguagem"
        android:src="@drawable/ic_launcher_certo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="125dp"
        android:gravity="center"
        android:text="Aponte para um lápis e um relógio. Peça para o paciente dizer o nome dos objetos conforme você aponta."
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/imgbtnELinguagem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView2"
        android:layout_marginRight="16dp"
        android:layout_marginTop="90dp"
        android:layout_toLeftOf="@+id/imgbtnVLinguagem"
        android:src="@drawable/btnerrado" />

</RelativeLayout>