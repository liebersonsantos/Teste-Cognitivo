<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181dp"
        android:text="FECHE OS OLHOS"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnComandoSeguir"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/proximo"
        android:text="Seguir" />

    <ToggleButton
        android:id="@+id/tgFecha"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_above="@+id/btnComandoSeguir"
        android:layout_alignLeft="@+id/btnComandoSeguir"
        android:layout_marginBottom="81dp"
        android:textOff="Errado"
        android:textOn= "Certo" />

</RelativeLayout>
