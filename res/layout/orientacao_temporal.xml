<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Orientação Temporal" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:gravity="center" 
        android:text="Pergunte pausadamente ao paciente cada questão. A cada resposta certa somar-se-á 1 ponto." />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView7"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="22dp"
        android:text="Qual o dia da semana?" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:text="Qual o dia de mês?" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="18dp"
        android:text="Em que mês estamos?" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_centerVertical="true"
        android:text="Em que ano estamos?" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="20dp"
        android:text="Qual a hora aproximada?" />

    <ImageButton
        android:id="@+id/imgbtnVdiaSemana"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView3"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/textView1"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imgbtnEdiaSemana"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView3"
        android:layout_toLeftOf="@+id/imgbtnVdiaSemana"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imgbtnVdiaMes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/imgbtnVdiaSemana"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imgbtnEdiaMes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView4"
        android:layout_toLeftOf="@+id/imgbtnVdiaSemana"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imgbtnVmes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/imgbtnVdiaMes"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imgbtnEmes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imgbtnVmes"
        android:layout_toLeftOf="@+id/imgbtnVdiaSemana"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imgbtnVano"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/imgbtnVmes"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imgbtnEano"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imgbtnVano"
        android:layout_toLeftOf="@+id/imgbtnVdiaSemana"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imgbtnVhora"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/imgbtnVano"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imgbtnEhora"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imgbtnVhora"
        android:layout_toLeftOf="@+id/imgbtnVdiaSemana"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imgbtnEnviarOrientacaoTemporal"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgbtnEhora"
        android:layout_alignParentBottom="true"
        android:src="@android:drawable/btn_star" />

</RelativeLayout>
