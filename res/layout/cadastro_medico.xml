<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txtLoginMed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEspecialidade"
        android:layout_below="@+id/txtEspecialidade"
        android:layout_marginTop="38dp"
        android:text="Login" />

    <EditText
        android:id="@+id/edtCrmMed"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtCrm"
        android:layout_alignBottom="@+id/txtCrm"
        android:layout_alignLeft="@+id/edtNomeMedico"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnSalvarMed"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Salvar" />

    <TextView
        android:id="@+id/txtCadMed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Cadastro do MÃ©dico" />

    <EditText
        android:id="@+id/edtEspecialidadeMed"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtCrmMed"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txtEspecialidade"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtLoginMed"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtLoginMed"
        android:layout_alignBottom="@+id/txtLoginMed"
        android:layout_alignLeft="@+id/edtEspecialidadeMed"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtSenhaMed"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtLoginMed"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txtSenhaMed"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/txtEspecialidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edtCrmMed"
        android:layout_marginTop="27dp"
        android:text="Especialidade" />

    <TextView
        android:id="@+id/txtCrm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtLoginMed"
        android:layout_below="@+id/edtNomeMedico"
        android:layout_marginTop="18dp"
        android:text="CRM" />

    <TextView
        android:id="@+id/txtNomeMed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtSenhaMed"
        android:layout_below="@+id/txtCadMed"
        android:layout_marginTop="67dp"
        android:text="Nome" />

    <EditText
        android:id="@+id/edtNomeMedico"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txtNomeMed"
        android:layout_toRightOf="@+id/txtEspecialidade"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtSenhaMed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCrm"
        android:layout_below="@+id/edtLoginMed"
        android:layout_marginTop="22dp"
        android:text="Senha" />

</RelativeLayout>