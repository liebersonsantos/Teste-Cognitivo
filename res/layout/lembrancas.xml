<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="31dp"
        android:text="Lembranças" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Pergunte para o paciente o nome das três palavras apresentadas no teste Registro" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="60dp"
        android:text="VASO" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="26dp"
        android:text="CARRO" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="33dp"
        android:text="TIJOLO" />

    <ImageButton
        android:id="@+id/imgbtnVLinguagem"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imgbtnVvasoLembranca"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/textView1"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imgbtnEcarroLembranca"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/imgbtnVLinguagem"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imgbtnVcarroLembranca"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView5"
        android:layout_toRightOf="@+id/textView1"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imgbtnEtijoloLembranca"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/imgbtnEcarroLembranca"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imgbtnVtijoloLembranca"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/imgbtnVcarroLembranca"
        android:layout_alignTop="@+id/imgbtnEtijoloLembranca"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imgbtnEnviarRegistro"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView1"
        android:src="@android:drawable/btn_star" />

</RelativeLayout>
